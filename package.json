{
   "name": "figaro-cli",
   "version": "1.0.0",
   "description": "Figaro cli tool for interact with delivery requests in contract",
   "author": "Anton Shramko <antonshramko@yandex.ru>",
   "license": "Apache-2.0",
   "type": "commonjs",
   "main": "dist/index.js",
   "bin": "dist/index.js",
   "scripts": {
      "copy:wasm": "copyfiles -f src/assets/figaro.wasm dist/assets",
      "style:fix": "prettier --config .prettierrc.js 'src/**/*.{ts,tsx}' --write",
      "lint:fix": "eslint '*/**/*.{ts,tsx}' --quiet --fix",
      "fix:all": "npm run style:fix && npm run lint:fix",
      "build": "tsc -p tsconfig.json",
      "build:watch": "yarn build -w",
      "start": "node dist/index.js",
      "install:global": "npm install && npm run build && npm i -g"
   },
   "dependencies": {
      "@cosmjs/amino": "^0.28.11",
      "@cosmjs/cosmwasm-stargate": "^0.28.11",
      "@cosmjs/proto-signing": "^0.28.11",
      "@cosmjs/stargate": "^0.28.11",
      "@cosmjs/tendermint-rpc": "^0.28.11",
      "@polkadot/util": "^10.1.4",
      "bech32": "^2.0.0",
      "bn.js": "^5.2.0",
      "chalk": "4",
      "commander": "^9.4.0",
      "reflect-metadata": "^0.1.13"
   },
   "devDependencies": {
      "@types/bn.js": "^5.1.0",
      "@types/node": "^16.11.10",
      "@typescript-eslint/eslint-plugin": "^5.23.0",
      "@typescript-eslint/parser": "^5.23.0",
      "copyfiles": "^2.4.1",
      "eslint": "^8.2.0",
      "tslib": "^2.4.0",
      "typescript": "4.5.2"
   }
}
